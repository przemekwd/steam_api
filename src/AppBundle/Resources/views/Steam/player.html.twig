{% extends 'base.html.twig' %}

{% block body %}

    {% include '@App/Steam/block/_navbar.html.twig' with {'icon': 'person'} %}

    <div class="content row">
        <div class="col-md-8">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-profile">
                            <div class="card-avatar">
                                <a href="#">
                                    <img class="img" src="{{ player.avatarFull }}" />
                                </a>
                            </div>
                            <div class="card-body">
                                <h6 class="card-category">{{ player.realName }}</h6>
                                <h4 class="card-title">{{ player.personaName }}</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        {% include '@App/Steam/block/_ownedGames.html.twig' with {'steamId': player.steamId} %}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            {% include '@App/Steam/block/_friendList.html.twig' with {'steamId': player.steamId} %}
        </div>
    </div>

{% endblock %}
